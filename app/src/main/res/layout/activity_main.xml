<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button android:id="@+id/buttonMultipleTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_multiple_activity_test" />

    <Button android:id="@+id/buttonSingleTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_single_activity_test" />

    <CheckedTextView android:id="@+id/checkboxAutoplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="true"
        android:gravity="center"
        android:text="Autoplay" />
</LinearLayout>